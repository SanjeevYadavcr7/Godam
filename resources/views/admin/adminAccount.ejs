<section class="w-2/3 menuProfile container py-8 p-8">
    <a class="alink" href="/">Godam</a> <i class="rightArrow las la-angle-right text-xs"></i>
    <a class="alink linkActive" href="#">My Account</a>
    <!-- <h1 class="text-lg font-medium mb-2 mt-2">Rice, Atta & Pulses</h1> -->
    <hr class="mb-5"/>

    <div class="flex flex-row profile">
        <div class="profileMenu flex flex-col">
            <!-- <h1>My Account</h1> -->
            <div id="tab-1" class="tab-item tab-border profileMenu1 flex items-center"><i class="lar la-user-circle"></i>Profile</div>
            <div id="tab-2" class="tab-item profileMenu2 flex items-center"><i class="lar la-clipboard"></i>Orders</div>
            <div id="tab-3" class="tab-item profileMenu3 flex items-center"><i class="las la-home"></i> Address </div>
            <div id="tab-4" class="tab-item profileMenu4 flex items-center"><i class="las la-bell"></i>Notifications</div>
            <div id="tab-5" class="tab-item profileMenu5 flex items-center"><i class="lar la-credit-card"></i>Payments</div>
        </div>

        <!-- Profile Box -->
        <div id="tab-1-content" class="profileDes tab-content-item show">
            <h1 class="font-bold text-3xl pb-6">Profile</h1>
            <h1 class="font-bold text-lg"><%= user.name%></h1>
            <h1 class="font-bold text-xs pt-2">Email Id:<span class="font-normal pl-2"><%= user.email%></span></h1>
            <h1 class="font-bold text-xs pt-1 pb-5">Phone Number:<span class="font-normal pl-2">+91-<%= user.phone%></span></h1>
            <hr/>            
            <h1 class="font-medium text-xs pt-5 pb-3">Want to change your password?</h1>
            <button class="btn-profile px-8 py-3">CHANGE PASSWORD</button>
        </div>

        <!-- // Order Box -->
        <div id="tab-2-content" class="profileOrder tab-content-item container mx-auto pl-10">
            <table class="w-full table-auto bg-white gfg">
                <thead>
                    <tr class="text-center">
                        <th class="px-4 py-2">OrderId</th>
                        <th class="px-4 py-2">Customer</th>
                        <th class="px-4 py-2">Status</th>
                        <th class="px-4 py-2">Placed at</th>
                    </tr>
                </thead>
                <tbody id="orderTableBodyProfile" class="orderT">
                </tbody>
            </table>
        </div>
        
        <!-- // Adress box -->
        <div id="tab-3-content" class="profileAddress tab-content-item">
            <h1 class="font-bold text-3xl pb-6">Address Book</h1>
            <h1 class="font-bold text-lg">NT - 1/20 G.S.V.M. Medical College, Kanpur</h1>
            <h1 class="font-bold text-xs pt-2">Type:<span class="font-normal pl-2">Home</span></h1>
            <h1 class="font-bold text-xs pt-1 pb-5">Status:<span class="font-normal pl-2">Default Address</span></h1>
            <hr/>            
            <h1 class="font-medium text-xs pt-5 pb-3">Want to change your address?</h1>
            <button class="btn-profile px-8 py-3">CHANGE ADDRESS</button>
        </div>

        <!-- Notification Bar -->
        <div id="tab-4-content" class="profileNotification tab-content-item">
            <h1 class="font-bold text-3xl pb-6">Notifications</h1>
            <h1 class="text-lg mt-6">No notifications for now !</h1>
        </div>

        <!-- Payment Bar -->
        <div id="tab-5-content" class="profilePayment tab-content-item">
            <h1 class="font-bold text-3xl pb-6">Your Payments</h1>
            <h1 class="text-lg mt-6">We are currently working on adding payment gateway.</h1>
            <h1 class="font-bold text-xs pt-2">To be added soon.</h1>
        </div>

    </div>

</section>