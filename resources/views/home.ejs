<section class="w-full menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">Best Deals Store</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        
        <% pizzas.forEach(function(pizza){ %>

            <div class="card w-full md:w-64">
                <span class="discount font-medium py-1 px-1 text-xs mb-4"><%= Math.abs(Math.floor(pizza.price/10)) %>% OFF</span>
                <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image%>" alt="pizza" />
                <div class="text-center">
                    <h2 class="mb-4 text-sm font-medium"><%= pizza.name%> / <%= pizza.size%> </h2>
                    <!-- <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size%></span> -->
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= pizza.price%> <del class="font-normal text-sm"><%= Math.abs(pizza.price)+Math.abs(Math.floor(pizza.price/10)) %></del> </span>
                        <button data-pizza="<%= JSON.stringify(pizza)%>" class="add-to-cart flex items-center font-medium py-1 px-3">
                            <!-- <span>+</span> -->
                            <span class="ml-2 text-sm">+ Add</span>
                        </button>
                    </div>
                </div>
            </div>

        <% }) %>
        
    </div>

</section>